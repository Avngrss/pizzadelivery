{{#if isOpen}}

  <div
    class="fixed top-0 left-0 right-0 bottom-0 flex items-center justify-center bg-gray-700/[0.7]"
  >
    <div class="relative w-full max-w-md max-h-full {{className}}">
      <!-- Modal content -->
      <div
        class="relative bg-white rounded-lg shadow animate-fade-down animate-duration-500"
      >
        <!-- Modal header -->
        <div class="flex items-center justify-between p-2 rounded-t">
          <h3 class="text-xl font-semibold text-yellow-900">
            {{title}}
          </h3>
          <button
            type="button"
            class="modal-close text-gray-400 bg-transparent bg-orange-200 hover:text-gray-900 rounded-lg text-lg w-8 h-8 ms-auto inline-flex justify-center items-center"
            data-modal-hide="default-modal"
          >
            <div class="icon-x-circle modal-close text-yellow-400">X</div>
          </button>
        </div>
        <!-- Modal body -->
        <div class="p-4 pt-5 space-y-4 modal-body max-h-[700px] overflow-auto">
        </div>
        <!-- Modal footer -->
        <div
          class="flex flex-col gap-3 items-center p-4 border-gray-200 rounded-b"
        >
          <div class="w-full">
            <button
              class="w-full uppercase modal-success text-white bg-orange-400 hover:bg-orange-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
            >{{successCaption}}</button>
          </div>
          {{#if showBtn}}
            <div class="w-full">
              <button
                class="w-full uppercase modal-close py-2.5 px-5 text-sm font-medium text-white focus:outline-none bg-orange-800 rounded-lg border border-gray-200 hover:bg-orange-600"
              >{{rejectCaption}}</button>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{/if}}