<ui-loader loading="{{isLoading}}" class-name="z-1 bg-white/70"></ui-loader>
<div class="relative flex-initial">
  <app-router>
    <app-route
      path="${props.routes.home}"
      title="Главная"
      component="home-page"
    ></app-route>
    <app-route
      path="${props.routes.signIn}"
      title="Вход в аккаунт"
      component="signin-page"
    ></app-route>
    <app-route
      path="${props.routes.signUp}"
      title="Регистрация"
      component="signup-page"
    ></app-route>
    <app-route
      path="${props.routes.products}"
      title="Магазин"
      component="products-page"
    ></app-route>
    <app-route
      path="${props.routes.contacts}"
      title="Контакты"
      component="contacts-page"
    ></app-route>
    <app-route
      path="${props.routes.cart}"
      title="Корзина"
      component="cart-page"
    ></app-route>
    <app-route
      path="${props.routes.room}"
      title="Личный кабинет"
      component="room-page"
    ></app-route>
    <app-route
      path="${props.routes.notFound}"
      title="404 | Not Found"
      component="not-found"
    ></app-route>
    <app-outlet class="flex-auto"></app-outlet>
  </app-router>
</div>
<ui-toast></ui-toast>
<ui-modal></ui-modal>