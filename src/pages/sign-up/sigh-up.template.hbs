<div class="container mx-auto px-4 animate-fade-left animate-duration-1000">
  <div class="col-span-3 relative">
    <ui-loader loading="{{isLoading}}" class-name="z-1 bg-white/70"></ui-loader>
    <div class="px-5 mt-10">
      <div class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="orange"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-arrow-left"
        ><path d="m12 19-7-7 7-7" /><path d="M19 12H5" /></svg>
        <router-link
          label="Вернуться на главную"
          class="text-orange-500 text-sm"
          href="${props.routes.home}"
        ></router-link>
      </div>
    </div>
    <div class="mt-24">
      <div class="flex justify-start relative">
        <img class="absolute" src="/left-man.png" alt="left-man" />
      </div>
      <div class="flex justify-end relative">
        <img class="absolute" src="/right-girl.png" alt="right-girl" />
      </div>
      <div class="flex items-center justify-center">
        <div
          class="mt-16 border-orange-400 border-2 p-9 h-2/5 w-2/4 rounded-lg m-0"
        >
          <h1 class="text-2xl">Регистрация аккаунта</h1>
          <form class="text-slate-400 mt-3 text-sm">
            <div class="flex flex-col gap-3 sign-in-form mt-12">
              <p class="flex items-center gap-2">
                <span> Уже есть аккаунт?</span>
                <router-link
                  label="Войти"
                  class="text-orange-500"
                  href="${props.routes.signIn}"
                ></router-link>
              </p>
              <ui-input
                class="text-orange-500"
                label="Ваш email"
                name="email"
                type="email"
                class-name="p-1 focus:outline-none focus:border-orange-500 focus:ring-1 focus:ring-orange-300"
              ></ui-input>
              <ui-input
                class="text-orange-500"
                label="Ваше имя"
                type="text"
                name="displayName"
                class-name="p-1 focus:outline-none focus:border-orange-500 focus:ring-1 focus:ring-orange-300"
              ></ui-input>
              <ui-input
                class="text-orange-500"
                label="Ваш телефон"
                type="tel"
                name="phoneNumber"
                class-name="p-1 focus:outline-none focus:border-orange-500 focus:ring-1 focus:ring-orange-300"
              ></ui-input>
              <ui-input
                class="text-orange-500"
                label="Пароль"
                type="password"
                name="password"
                class-name="p-1 focus:outline-none focus:border-orange-500 focus:ring-1 focus:ring-orange-300"
              ></ui-input>
              <ui-input
                class="text-orange-500"
                label="Подтвердить пароль"
                type="password"
                name="password"
                class-name="p-1 focus:outline-none focus:border-orange-500 focus:ring-1 focus:ring-orange-300"
              ></ui-input>
              <ui-button
                caption="Зарегистрироваться"
                class-name="block w-full text-white"
                class-name="p-1 focus:outline-none focus:border-orange-500 focus:ring-1 focus:ring-orange-300"
              ></ui-button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>