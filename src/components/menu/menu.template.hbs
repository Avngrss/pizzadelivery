{{#if isOpenDriwer}}
  <div class="fixed top-0 right-0 bottom-0 z-20 bg-black/[0.5]">
    <div class="w-[500px] h-full">
      <!-- Drawer content -->
      <div class="bg-white shadow animate-fade-left animate-duration-500 pb-5">
        <!-- Drawer header -->
        <div class="flex items-center justify-between p-4 border-b rounded-t">
          <h3 class="text-xl font-semibold text-gray-900">
            Корзина
          </h3>
          <button
            type="button"
            class="drawer-reject-trigger text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-lg w-8 h-8 ms-auto inline-flex justify-center items-center"
            data-modal-hide="default-modal"
          >
            <div class="icon-x-circle text-orange-300 close-driwer">X</div>
          </button>
        </div>
        <!-- Drawer body -->
        <div
          class="p-4 space-y-4 drawer-body h-screen overflow-auto pb-20 flex justify-between flex-col"
        >
          <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quasi,
            reprehenderit!</p>
          <div>
            <p>Сумма заказа: <span>0</span></p>
            <router-link
              href="${props.routes.room}"
              class="text-white block p-1 rounded-lg w-full bg-orange-400 mt-30 text-center"
              label="Заказать"
            ></router-link>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}
<div
  class="flex items-center justify-between mt-4 bg-orange-400 p-3 rounded-lg"
>
  <div class="flex items-center justify-between">
    <ui-logo></ui-logo>
  </div>
  <div class="font-bold">
    <h3 class="text-lg">Доставка пиццы
      <span class="text-white text-xl">Москва</span>
    </h3>
    <div class="flex items-center gap-2">
      <img src="/delivery.svg" alt="yandex-food" />
      <p>Яндекс еда</p>
      <div class="h-1 w-1 bg-yellow-200 rounded-full"></div>
      <p>4.8</p>
      <img src="/raiting.svg" alt="raiting" />
      <p>Время доставки</p>
      <div class="h-1 w-1 bg-yellow-200 rounded-full"></div>
      <p>от 31 мин</p>
    </div>
  </div>
  <nav class="flex gap-5">
    <router-link
      href="${props.routes.products}"
      class="text-white block p-1 rounded-lg hover:hover:scale-110 ease-in duration-300"
      label="Магазин"
    ></router-link>
    <router-link
      href="${props.routes.contacts}"
      class="text-white block p-1 rounded-lg hover:scale-110 ease-in duration-300"
      label="Контакты"
    ></router-link>
    <router-link
      href="${props.routes.room}"
      class="text-white block p-1 rounded-lg hover:hover:scale-110 ease-in duration-300"
      label="Личный кабинет"
    ></router-link>
  </nav>
  <div>
    <ui-button
      class="order-call"
      caption="Заказать звонок"
      class-name="bg-violet-500 text-white"
    ></ui-button>
  </div>
  <div class="flex items-center gap-5">
    <div>
      <div class="flex flex-col items-center">
        <a
          href="{{user.email}}"
          class="text-lg font-light mt-2 email text-yellow-100"
        >{{user.email}}</a>
        <span>{{user.displayName}}</span>
        <span class="logout-btn cursor-pointer text-yellow-100">Выйти</span>
      </div>
    </div>
    <span class="font-bold">|</span>
    <div>
      <div class="relative cursor-pointer cart">
        <img class="h-10 w-10" src="/cart.svg" alt="cart" />
        <span
          class="rounded-full absolute -top-1 -right-2 h-6 w-6 text-center text-white bg-red-700"
        >0</span>
      </div>
    </div>
  </div>
</div>